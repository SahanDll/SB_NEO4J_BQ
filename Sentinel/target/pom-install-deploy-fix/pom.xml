<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>Analitics</artifactId>
        <groupId>com.dev</groupId>
        <version>1.0.1</version>
    </parent>
    <groupId>com.dev.sv</groupId>
    <modelVersion>4.0.0</modelVersion>
    <packaging>${packaging.type}</packaging>
    <artifactId>Sentinel</artifactId>

    <dependencies>
        <dependency>
            <groupId>com.dev.bq</groupId>
            <artifactId>BigQuery</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.dev.db</groupId>
            <artifactId>DataBase</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.dev.ra</groupId>
            <artifactId>RestApi</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.dev.au</groupId>
            <artifactId>Authentication</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.dev.de</groupId>
            <artifactId>DataExtract</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>local</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <artifact-packaging>jar</artifact-packaging>
                <packaging.type>jar</packaging.type>
            </properties>
        </profile>
        <profile>
            <id>remote</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <artifact-packaging>war</artifact-packaging>
                <packaging.type>war</packaging.type>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-starter-tomcat</artifactId>
                    <scope>provided</scope>
                </dependency>
            </dependencies>
        </profile>
    </profiles>

    <build>
        <finalName>fmt-sentinel</finalName>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <executable>true</executable>
                    <mainClass>com.dev.sv.server.Application</mainClass>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.3</version>
            </plugin>
        </plugins>
    </build>
</project>